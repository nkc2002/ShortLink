{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install",
  "framework": null,
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/r/:path*", "destination": "/api/redirect/:path*" },
    { "source": "/((?!api|r).*)", "destination": "/index.html" }
  ]
}
